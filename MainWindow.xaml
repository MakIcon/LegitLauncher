<Window x:Class="McLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Legit Launcher PRO" Height="750" Width="1150"
        WindowStartupLocation="CenterScreen"
        Background="#121212" Foreground="White" FontFamily="Segoe UI Variable"
        Icon="D:\JBProjects\RIDER\MinecraftLauncherV2\MinecraftLauncherV2\Assets\LegitLauncher.ico">

    <Window.Resources>
        
        <Style x:Key="RoundedBgProgressBar" TargetType="ProgressBar">
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#388E3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border x:Name="PART_Track"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                ClipToBounds="True">
                            <!-- Индикатор, ширину ему будет выставлять сам ProgressBar -->
                            <Border x:Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="6"
                                    HorizontalAlignment="Left"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- если вдруг Indeterminate -->
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Width" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- СТИЛЬ КНОПОК МЕНЮ -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#777"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="10" Margin="0,4">
                            <Grid>
                                <Border x:Name="ActiveLine" HorizontalAlignment="Left" Width="5" Height="30"
                                        Background="#388E3C" CornerRadius="2" Visibility="Collapsed" Margin="8,0,0,0"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="#222"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="brd" Property="Background" Value="#252525"/>
                                <Setter TargetName="ActiveLine" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
<!-- СТИЛЬ COMBOBOX (ОБНОВЛЕННЫЙ) -->
<Style TargetType="ComboBox">
    <Setter Property="Background" Value="#181818"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderBrush" Value="#333"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="12,5"/>
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ComboBox">
                <Grid>
                    <ToggleButton Name="ToggleButton" 
                                  BorderBrush="{TemplateBinding BorderBrush}" 
                                  Background="{TemplateBinding Background}"
                                  Foreground="{TemplateBinding Foreground}"
                                  Grid.Column="2" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" Focusable="false" ClickMode="Press">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="Border" CornerRadius="8" Background="#181818" BorderBrush="#333" BorderThickness="1">
                                    <Path x:Name="Arrow" Fill="#555" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#222"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                    <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="12,0,33,0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    
                    <!-- Выпадающее меню -->
                    <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                        <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                            <!-- Тень или внешняя граница -->
                            <Border x:Name="DropDownBorder" Background="#181818" CornerRadius="10" BorderThickness="1" BorderBrush="#333" Margin="0,5,5,10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                </Border.Effect>
                                <!-- Внутренние отступы самого списка (Padding) -->
                                <ScrollViewer Margin="5" SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Popup>
                </Grid>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

        <!-- СТИЛЬ ЭЛЕМЕНТА COMBOBOX (ОБНОВЛЕННЫЙ) -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="12,10"/> <!-- Больше вертикального отступа -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <!-- Margin="2" создает воздух между пунктами -->
                        <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="6" Margin="2">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Наведение -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- Выбранный элемент -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="#388E3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СТИЛЬ APPLE TOGGLE -->
        <Style x:Key="AppleToggle" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Grid x:Name="Track" Width="42" Height="24">
                                <Border x:Name="BackBorder" Background="#333" CornerRadius="12"/>
                                <Ellipse x:Name="Dot" Fill="White" Width="18" Height="18" HorizontalAlignment="Left" Margin="3">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Grid>
                            <ContentPresenter Margin="12,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackBorder" Property="Background" Value="#388E3C"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Dot"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                             To="18" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Dot"
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                             To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- СЛАЙДЕР ОЗУ -->
        <Style x:Key="LegitSlider" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border Height="6" Background="#222" CornerRadius="3"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                        <RepeatButton.Template>
                                            <ControlTemplate>
                                                <Border Background="#388E3C" Height="6" CornerRadius="3"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Ellipse Width="20" Height="20" Fill="#388E3C" Stroke="#121212" StrokeThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PROGRESSBAR -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid x:Name="TemplateRoot">
                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                            <Border x:Name="PART_Indicator" HorizontalAlignment="Left" Background="{TemplateBinding Foreground}" CornerRadius="4"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- КАРТОЧКА ВЕРСИИ -->
        <Style x:Key="VersionItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,12,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="brd" Background="#1E1E1E" CornerRadius="12" Height="110" BorderBrush="#333" BorderThickness="1">
                            <Grid>
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding id}" Foreground="White" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding type}" Foreground="#555" FontSize="11" HorizontalAlignment="Center" Margin="0,3,0,0"/>
                                </StackPanel>
                                <Border x:Name="Badge" Visibility="Collapsed" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" Background="#388E3C" CornerRadius="4" Padding="5,2">
                                    <TextBlock Text="OK" Foreground="White" FontSize="9" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                <Setter TargetName="Badge" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="brd" Property="BorderBrush" Value="#388E3C"/>
                                <Setter TargetName="brd" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="brd" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ЛЕВАЯ ПАНЕЛЬ -->
        <Border Grid.Column="0" Background="#181818" BorderBrush="#252525" BorderThickness="0,0,1,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,40" HorizontalAlignment="Center">
                    <Border Width="45" Height="45" Background="#388E3C" CornerRadius="10">
                        <TextBlock Text="L" Foreground="White" FontWeight="Bold" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="LEGIT" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="22" FontWeight="Black"/>
                </StackPanel>

                <!-- ЛЕВАЯ ПАНЕЛЬ (Меню) -->
                <StackPanel Grid.Row="1">
                    <Button x:Name="BtnNavPlay" Content="ИГРАТЬ" Style="{StaticResource MenuButton}" Tag="Active" Click="BtnNavPlay_Click"/>
                    <!-- Кнопка модов должна быть тут ОДИН РАЗ -->
                    <Button x:Name="BtnNavMods" Content="МОДЫ" Style="{StaticResource MenuButton}" Click="BtnNavMods_Click" Margin="0,10,0,0"/>
    
                    <Button x:Name="BtnNavSettings" Content="НАСТРОЙКИ" Style="{StaticResource MenuButton}" Click="BtnNavSettings_Click" Margin="0,10,0,0"/>
                    <Button x:Name="BtnNavTelemetry" Content="ТЕЛЕМЕТРИЯ" Style="{StaticResource MenuButton}" Click="BtnNavTelemetry_Click" Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="0,0,0,10">
                    <TextBlock Text="НИКНЕЙМ" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                    <TextBox x:Name="TxtPlayerName" Text="LegitUser" Background="#111" BorderBrush="#333" Foreground="White" Padding="12" HorizontalContentAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ПРАВАЯ ПАНЕЛЬ -->
        <Grid Grid.Column="1" Margin="30">
            <!-- ИГРА -->
            <Grid x:Name="ViewPlay" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок (ComboBox удалены) -->
                <Grid Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock Text="Доступные версии" FontSize="28" FontWeight="Bold" VerticalAlignment="Center"/>
                </Grid>

                <ListBox x:Name="VersionsList" Grid.Row="1"
                         Background="Transparent" BorderThickness="0"
                         Padding="0" HorizontalContentAlignment="Stretch"
                         ItemContainerStyle="{StaticResource VersionItemStyle}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Hidden"
                         SelectionChanged="VersionsList_SelectionChanged">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>

                <!-- ПАНЕЛЬ ЛОГОВ -->
                <Border Grid.Row="2" Height="100" Background="#0A0A0A" CornerRadius="10" Padding="15" Margin="0,20,0,0" BorderBrush="#222" BorderThickness="1">
                    <TextBox x:Name="TxtLog"
                             Background="Transparent"
                             Foreground="#555"
                             BorderThickness="0"
                             IsReadOnly="True"
                             FontSize="12"
                             VerticalScrollBarVisibility="Hidden"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"/>
                </Border>

                <Grid Grid.Row="3" Margin="0,30,0,0">
                    <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Center" Margin="0,0,30,0">
                        <ProgressBar x:Name="Pb" Height="6" Background="#1A1A1A" Foreground="#388E3C" BorderThickness="0" Margin="0,0,0,10"/>
                        <TextBlock x:Name="LblStatus" Text="Выберите версию" Foreground="#666" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="BtnDownload" Width="70" Height="70" Click="BtnDownload_Click" Margin="0,0,15,0" Visibility="Collapsed">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="brd" Background="#222" CornerRadius="10" BorderBrush="#333" BorderThickness="1">
                                        <TextBlock Text="⬇" Foreground="#388E3C" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="BtnLaunch" Width="240" Height="70" Click="BtnLaunch_Click" IsEnabled="False">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#388E3C"/>
                                    <Setter Property="Content" Value="ИГРАТЬ"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="22"/>
                                    <Setter Property="FontWeight" Value="Black"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- НАСТРОЙКИ -->
            <Grid x:Name="ViewSettings" Visibility="Collapsed">
                <StackPanel MaxWidth="600" HorizontalAlignment="Left">
                    <TextBlock Text="Настройки" FontSize="28" FontWeight="Bold" Margin="0,0,0,40"/>
                    <TextBlock Text="ПУТЬ К JAVA" Foreground="#555" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid Margin="0,0,0,35">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox x:Name="TxtJavaPath" Text="java" Background="#181818" BorderBrush="#333" Foreground="#AAA" Padding="12" FontSize="14" IsReadOnly="True"/>
                        <Button Grid.Column="1" Content="🔍" Width="50" Margin="8,0,0,0" Click="AutoDetectJava_Click" Background="#222" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                        <Button Grid.Column="2" Content="..." Width="50" Margin="8,0,0,0" Click="BtnBrowseJava_Click" Background="#222" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                    </Grid>
                    <TextBlock Text="ВЫДЕЛЕНИЕ ОЗУ" Foreground="#555" FontSize="12" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DockPanel Margin="0,0,0,35">
                        <TextBlock DockPanel.Dock="Right" Text="{Binding ElementName=SliderRam, Path=Value, StringFormat={}{0} ГБ}" Foreground="#388E3C" FontWeight="Bold" FontSize="18" Width="70" TextAlignment="Right"/>
                        <Slider x:Name="SliderRam" Minimum="2" Maximum="16" IsSnapToTickEnabled="True" TickFrequency="1" Value="4" Style="{StaticResource LegitSlider}"/>
                    </DockPanel>
                    <StackPanel>
                        <!-- Кнопка фильтрации Fabric оставлена по просьбе -->
                        <CheckBox x:Name="CbFabric" Content="Отображать Fabric версии" Style="{StaticResource AppleToggle}" Margin="0,0,0,20" Click="FilterChanged"/>
                        <CheckBox x:Name="CbSnapshots" Content="Включать Snapshots" Style="{StaticResource AppleToggle}" Margin="0,0,0,20" Click="FilterChanged"/>
                        <CheckBox x:Name="CbPreReleases" Content="Включать Pre-releases" Style="{StaticResource AppleToggle}" Click="FilterChanged"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- ТЕЛЕМЕТРИЯ -->
            <Grid x:Name="ViewTelemetry" Visibility="Collapsed">
                <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                <TextBlock Text="Телеметрия" FontSize="28" FontWeight="Bold" Margin="0,0,0,30"/>
                <UniformGrid Grid.Row="1" Columns="2" VerticalAlignment="Top">
                    <Border Background="#1A1A1A" CornerRadius="16" Margin="0,0,15,15" Padding="25" BorderBrush="#252525" BorderThickness="1">
                        <StackPanel>
                            <Grid Margin="0,0,0,25">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="48" Height="48" CornerRadius="12" Background="#2E7D32">
                                        <TextBlock Text="L" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Launcher Engine" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock Text="Процесс активен" FontSize="12" Foreground="#388E3C"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="ИСПОЛЬЗОВАНИЕ ПАМЯТИ" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TxtLauncherMem" Text="0 MB" FontSize="32" FontWeight="Light" Margin="0,0,0,15"/>
                            <ProgressBar x:Name="PbLauncher" Style="{StaticResource ModernProgressBar}" Foreground="#388E3C"/>
                            <TextBlock x:Name="TxtLauncherPercent" Text="0%" Foreground="#555" HorizontalAlignment="Right" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#1A1A1A" CornerRadius="16" Margin="15,0,0,15" Padding="25" BorderBrush="#252525" BorderThickness="1">
                        <StackPanel>
                            <Grid Margin="0,0,0,25">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="48" Height="48" CornerRadius="12" Background="#1565C0">
                                        <TextBlock Text="M" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="Minecraft Java" FontSize="18" FontWeight="Bold"/>
                                        <TextBlock x:Name="TxtMinecraftStatus" Text="Ожидание" FontSize="12" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock Text="ВЫДЕЛЕННАЯ RAM (Xmx)" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock x:Name="TxtMinecraftMem" Text="—" FontSize="32" FontWeight="Light" Margin="0,0,0,15"/>
                            <ProgressBar x:Name="PbMinecraft" Style="{StaticResource ModernProgressBar}" Foreground="#1976D2"/>
                            <TextBlock x:Name="TxtMinecraftPercent" Text="0%" Foreground="#555" HorizontalAlignment="Right" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </Grid>
            <!-- В левую панель (StackPanel Grid.Row="1") добавьте кнопку: -->

<!-- В правую панель (Grid Grid.Column="1") добавьте ViewMods: -->
<!-- В ПРАВОЙ ПАНЕЛИ заменяем Grid x:Name="ViewMods" на этот: -->
<Grid x:Name="ViewMods" Visibility="Collapsed">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Заголовок -->
    <TextBlock Text="Проводник модов (Modrinth)" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

    <!-- Панель управления (Версия и Поиск на одной линии) -->
    <Grid Grid.Row="1" Margin="0,0,0,25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/> <!-- Для версии -->
            <ColumnDefinition Width="*"/>    <!-- Для поиска (растягивается до конца) -->
        </Grid.ColumnDefinitions>

        <!-- ВЫБОР ВЕРСИИ -->
        <StackPanel Grid.Column="0" Margin="0,0,15,0">
            <TextBlock Text="ВЕРСИЯ ИГРЫ" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="ComboModVersions" 
                      SelectionChanged="ComboModVersions_SelectionChanged" 
                      Width="220" Height="42"/>
        </StackPanel>

        <!-- СКРУГЛЕННЫЙ ПОИСК (На всю оставшуюся ширину) -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="ПОИСК МОДОВ" Foreground="#555" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
            <Border Background="#181818" BorderBrush="#333" BorderThickness="1" CornerRadius="10" Height="42">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="45"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поле ввода с обработкой Enter -->
                    <TextBox x:Name="TxtModSearch" 
                             Background="Transparent" 
                             Foreground="White" 
                             BorderThickness="0" 
                             Padding="15,0" 
                             VerticalContentAlignment="Center" 
                             FontSize="14"
                             CaretBrush="#388E3C"
                             KeyDown="TxtModSearch_KeyDown"/> 

                    <!-- Иконка лупы (тоже кнопка) -->
                    <Button Grid.Column="1" Click="BtnSearchMods_Click" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="Transparent">
                                    <TextBlock Text="🔍" Foreground="#555" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>

    <!-- Список модов -->
    <ListBox x:Name="ModsList" Grid.Row="2" 
             Background="Transparent" 
             BorderThickness="0" 
             Margin="-5,0"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             ScrollViewer.VerticalScrollBarVisibility="Hidden">
        
        <!-- Убираем синее выделение ListBoxItem -->
        <ListBox.ItemContainerStyle>
            <Style TargetType="ListBoxItem">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            </Style>
        </ListBox.ItemContainerStyle>

        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid Columns="3" VerticalAlignment="Top"/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>

        <ListBox.ItemTemplate>
            <DataTemplate>
                <Border Background="#1A1A1A" CornerRadius="12" Margin="5" Padding="15" BorderBrush="#252525" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Шапка карточки -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Border Width="50" Height="50" CornerRadius="8">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding icon_url}"/>
                                </Border.Background>
                            </Border>
                            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center" Width="180">
                                <TextBlock Text="{Binding title}" FontWeight="Bold" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding author}" FontSize="11" Foreground="#555"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Описание -->
                        <TextBlock Grid.Row="1" Text="{Binding description}" Foreground="#AAA" FontSize="12" TextWrapping="Wrap" Height="45" TextTrimming="CharacterEllipsis" Margin="0,0,0,10"/>
                        
                        <!-- Кнопки управления модом -->
                        <Grid Grid.Row="2" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Кнопка Установить -->
                            <Button Grid.Column="0" Height="35" Click="BtnInstallMod_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#388E3C"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border CornerRadius="6" Background="{TemplateBinding Background}" ClipToBounds="True">
                                                        <Grid>
                                                            <ProgressBar x:Name="BgProgress" Style="{StaticResource RoundedBgProgressBar}" Value="{Binding DownloadProgress}" Visibility="Collapsed"/>
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                            <Setter TargetName="BgProgress" Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Background" Value="#1A1A1A"/>
                                                            <Setter Property="Content" Value="ЗАГРУЗКА..."/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Background" Value="#252525"/>
                                                            <Setter Property="Content" Value="УСТАНОВЛЕНО"/>
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                        </DataTrigger>
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding IsInstalled}" Value="False"/>
                                                                <Condition Binding="{Binding IsDownloading}" Value="False"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Content" Value="УСТАНОВИТЬ"/>
                                                        </MultiDataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Кнопка удаления (Крестик) -->
                            <Button Grid.Column="1" Width="35" Height="35" Margin="8,0,0,0" Click="BtnRemoveMod_Click" Content="✕">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#222"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="brd" Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="brd" Property="Background" Value="#C62828"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Grid>
        </Grid>
    </Grid>
</Window>